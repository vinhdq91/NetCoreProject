@page
@model NetCoreProject1.Content.ObjectBindingModel
@{
}

@if (Request.Method.ToUpper() == "GET")
{
    <form class="center border border-light p-3 w-50" method="post">
        <div class="text-center">
            <p class="h4 mb-4">Subscribe</p>
            <p>Join our mailing list. We write rarely, but only the best content.</p>
        </div>

        <input name="Profile.Fullname" type="text" placeholder="Name" class="form-control mb-2">
        <input name="Profile.Email" type="email" placeholder="E-mail" class="form-control mb-2">
        <input name="Profile.Age" type="number" placeholder="Age" class="form-control mb-2">
        <input name="Profile.Class" type="text" placeholder="Class" class="form-control mb-2">
        <button type="submit" class="btn btn-info btn-block">Register</button>
    </form>
}
else if (Request.Method.ToUpper() == "POST")
{
    <div class="center text-center border border-success p-3 w-50">
        <p class="h5">@Model.Message</p>
    </div>
}